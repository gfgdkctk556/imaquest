    <!-- Display enemy information -->
    <div><!-- 修正点 -->
        <h3>敵の情報</h3>
        <p>名前: ${enemy.get("enemy_name")}</p>
        <p>体力: ${enemy.get("enemy_hp")}</p>
        <p>防御力: ${enemy.get("enemy_defense")}</p>
        <!-- 他の敵の情報も必要に応じて表示できます -->
    </div><!-- 修正点 -->
</div>

<!-- Display enemy information -->
<div>
    <h3>敵の情報</h3>
    <p>名前: <span th:text="${enemy.get('enemy_name')}"></span></p>
    <p>体力: <span th:text="${enemy.get('enemy_hp')}"></span></p>
    <p>防御力: <span th:text="${enemy.get('enemy_defense')}"></span></p>
    <!-- 他の敵の情報も必要に応じて表示できます -->
</div>

<!-- Display battle result message -->
<p th:text="${battleResultMessage}"></p>

<!-- Actions menu (attack, magic, item) -->
<div>
    <form action="/battle" method="get">
