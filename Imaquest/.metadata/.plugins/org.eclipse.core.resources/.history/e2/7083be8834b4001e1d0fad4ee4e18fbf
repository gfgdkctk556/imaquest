<h1>Battle Page</h1>

<!-- Check if battle has started -->
<div th:if="${battleStarted}">
    <!-- Display player information -->
    <h2>Player Information</h2>
    <p th:text="${playerInfo.character_name}"></p>
    <p th:text="${playerInfo.character_hp}"></p>
    <!-- Display enemy information -->
    <h2>Enemy Information</h2>
    <div th:each="enemy : ${enemies}">
        <p th:text="${enemy.enemy_name}"></p>
        <p th:text="${enemy.enemy_hp}"></p>
        <p th:text="${enemy.enemy_defense}"></p>
    </div>
</div>

<!-- Display battle result message -->
<p th:text="${battleResultMessage}"></p>

<!-- Actions menu (attack, magic, item) -->
<div>
    <form action="/battle" method="get">
        <button type="submit" name="playerAction" value="attack">Attack</button>
        <button type="submit" name="playerAction" value="magic">Magic</button>
        <button type="submit" name="playerAction" value="item">Item</button>
    </form>
</div>

</body>
